<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- agrega en la ficha de producto la cantidad de producto que hay en cada caja
             pudiendo seleccionar además la unidad de medida -->

        <record model='ir.ui.view' id='product_form_view_suelos'>
            <field name='name'>product.form.suelos</field>
            <field name='model'>product.product</field>
            <field name='inherit_id' ref='product.product_normal_form_view'/>
            <field name='type'>form</field>
            <field name='arch' type='xml'>

                <xpath expr="//field[@name='lst_price']" position="after">
                    <group col="3" colspan="3">
                        <field name="prod_in_box"/>
                        <field name="prod_in_box_uom" nolabel="1"/>
                    </group>
                </xpath>

                <!-- cambia el label del campo a precio mercadolibre                 -->
                <xpath expr="//field[@name='lst_price']" position="attributes">
                    <attribute name="string">Precio Mercadolibre</attribute>
                </xpath>

            </field>
        </record>

        <!-- agrega una condición para que los integrantes del grupo group_suelos_sales_readonly_price
             no puedan ver el campo precio mercadolibre -->

        <record id="product_form_hide_meli_price_suelos" model="ir.ui.view">
            <field name="name">product.form.hide.meli.suelos</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="groups_id" eval="[(6, 0, [ref('group_suelos_sales_users') ])]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lst_price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>

        <!--  product inherited tree view -->

        <record id="view_product_tree_curso" model="ir.ui.view">
            <field name="name">res.product.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="lst_price" position="after">
                    <field name="price_1"/>
                    <field name="price_2" groups="suelos_default.group_suelos_admin_users"/>
                    <field name="price_3"/>
                </field>
                <field name="ean13" position="replace"/>
                <field name="lst_price" position="replace"/>
                <field name="attribute_value_ids" position="replace"/>
            </field>
        </record>

    </data>
</openerp>