<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- agrega una condición para que los integrantes del grupo group_suelos_sales_users y
        group_suelos_stock_users no puedan editar el precio en la orden de venta-->

        <record id="view_order_form_readonly_price_suelos" model="ir.ui.view">
            <field name="name">sale.order.form.readonly.suelos</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('group_suelos_sales_users'),
                                                   ref('group_suelos_stock_users')  ])]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <!--
        - agrega una condición para que los integrantes del grupo group_suelos_sales_users y
          group_suelos_stock_users  no puedan editar el precio en la factura
        -->

        <record id="account_invoice_form_readonly_price_suelos" model="ir.ui.view">
            <field name="name">invoice.order.form.readonly.suelos</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('group_suelos_sales_users'),
                                                   ref('group_suelos_stock_users')  ])]"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- ocultar el menu Contabilidad / Proveedores para los usuarios que no son administradores -->

        <record model="ir.ui.menu" id="account.menu_finance_payables">
            <field name="groups_id" eval="[(6,0,[
                                                    ref('group_suelos_admin_users'),
                                                    ref('base.group_erp_manager')
                                                ])]"/>
        </record>


    </data>
</openerp>